<script type='text/x-handlebars-template' id='faostat_ui_table_structure'>
    <div class='row'>
        <div class='col-lg-12'>
            <table class='table table-responsive table-condensed table-striped table-bordered table-hover table-faostat'>
                <thead style='display: block;'>
                    <tr>
                        {{#each headers}}
                            <th data-type='{{this.type}}' style='width: 75px; text-align: center; vertical-align: middle; background-color: #23527c; border-color: #23527c; color: #fff;'>
                                {{this.label}}
                            </th>
                        {{/each}}
                    </tr>
                </thead>
                <tbody style='display: block; overflow: auto; max-height: 250px;'>
                    {{#each rows}}
                        <tr>
                            {{#each this.cells}}
                                <td data-type='{{this.type}}' style='width: 75px; vertical-align: middle;'>
                                    {{this.label}}
                                </td>
                            {{/each}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-12 text-center'>
            <span class='first_page_button'>
                <span class='fa-stack fa-lg'>
                    <i class='fa fa-square-o fa-stack-2x'></i>
                    <i class='fa fa-fast-backward fa-stack-1x'></i>
                </span>
            </span>
            <span class='previous_page_button'>
                <span class='fa-stack fa-lg'>
                    <i class='fa fa-square-o fa-stack-2x'></i>
                    <i class='fa fa-backward fa-stack-1x'></i>
                </span>
            </span>
            <span class='next_page_button'>
                <span class='fa-stack fa-lg'>
                    <i class='fa fa-square-o fa-stack-2x'></i>
                    <i class='fa fa-forward fa-stack-1x'></i>
                </span>
            </span>
            <span class='last_page_button'>
                <span class='fa-stack fa-lg'>
                    <i class='fa fa-square-o fa-stack-2x'></i>
                    <i class='fa fa-fast-forward fa-stack-1x'></i>
                </span>
            </span>
            &nbsp;&nbsp;&nbsp;
            <span style='line-height: 32px;'>
                Page <b id='current_page'>{{current_page}}</b> / <b>{{total_pages}}</b>.
            </span>
        </div>
    </div>
    <br>
</script>
