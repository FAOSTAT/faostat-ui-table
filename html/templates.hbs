<script type='text/x-handlebars-template' id='faostat_ui_table_structure'>
    <div class='row'>
        <div class='col-lg-11'>
            <table class='table table-responsive table-condensed table-striped table-bordered table-hover'>
                <thead style='display: block;'>
                    <tr>
                        {{#each headers}}
                            <th data-type='{{this.type}}' style='width: 75px; text-align: center; vertical-align: middle; background-color: #23527c; border-color: #23527c; color: #fff;'>
                                {{this.label}}
                            </th>
                        {{/each}}
                    </tr>
                </thead>
                <tbody style='display: block; overflow: auto; max-height: 250px;'>
                    {{#each rows}}
                        <tr>
                            {{#each this.cells}}
                                <td data-type='{{this.type}}' style='width: 75px; vertical-align: middle;'>
                                    {{this.label}}
                                </td>
                            {{/each}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-12 text-center'>
            <ul class='pagination' style='margin-bottom: 0; margin-top: 0;'>
                <li>
                    <a>
                        <span aria-hidden='true'>
                            <i class='fa fa-fast-backward first_page_button'></i>
                        </span>
                    </a>
                </li>
                <li>
                    <a>
                        <span aria-hidden='true'>
                            <i class='fa fa-backward previous_page_button'></i>
                        </span>
                    </a>
                </li>
                <li>
                    <a>
                        <span aria-hidden='true'>
                            <i class='fa fa-forward next_page_button'></i>
                        </span>
                    </a>
                </li>
                <li>
                    <a>
                        <span aria-hidden='true'>
                            <i class='fa fa-fast-forward last_page_button'></i>
                        </span>
                    </a>
                </li>
            </ul>
        </div>
        <div class='col-lg-12 text-center'>
            <span>
                Page <b id='current_page'>{{current_page}}</b> / <b>{{total_pages}}</b>.
            </span>
        </div>
    </div>
    <br>
</script>
