<script type='text/x-handlebars-template' id='faostat_ui_table_structure'>
    <div class='row'>
        <div class='col-lg-12' style='max-height: 250px; overflow: auto;'>
            <table class='table table-responsive table-condensed table-striped table-bordered table-hover' style='width: 100%;'>
                <thead>
                    <tr>
                        {{#each headers}}
                            <th data-type='{{this.type}}'>
                                {{this.label}}
                            </th>
                        {{/each}}
                    </tr>
                </thead>
                <tbody>
                    {{#each rows}}
                        <tr>
                            {{#each this.cells}}
                                <td data-type='{{this.type}}'>
                                    {{this.label}}
                                </td>
                            {{/each}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class='col-lg-12 text-center'>
            <ul class='pagination'>
                {{#each pages}}
                    <li id='li_{{this}}'>
                        <a id='page_{{this}}'>
                            {{this}}
                        </a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</script>
